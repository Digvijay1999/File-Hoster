    <% console.log(userfiles.length) %>

        <% userfiles.forEach((info)=>{ %>

            <button type="button" class="collapsible">
                <form action="#" method="GET">
                    <input type="submit" name='<%info[0].username %>' value='<%=info[0].username %>'>
                </form>
            </button>

            <div class="content">
                <% for(let index=1 ; index < info.length ; index++){ %>

                            <div style="border-style: solid; border-color: black; border-width: thin;">
                                <form action="/admin/userfiles" method="POST" style="margin: 10px;">
                                    <div>
                                        <h2>
                                            <%= info[index].filename %>
                                              
                                        </h2>
                                        <h2>
                                            <%= info[index].filesize %>
                                        </h2>
                                    </div>
                                    <div style="margin: 5px;">
                                        <input type="text" name="username" value='<%=info[0].username %>'>
                                        <input type="text" style="display: none;" name="filename" value= '<%= info[index].filename %>'>
                                        <input type="submit" name="action" value="delete" style="margin: 5px;">
                                        <input type="submit" name="action" value="download">
                                    </div>
                                </form>
                            </div>
                            <% } %>
            </div>


            <% }) %>


                <script>
                var coll = document.getElementsByClassName("collapsible");
                var i;

                for (i = 0; i < coll.length; i++) {
                    coll[i].addEventListener("click", function () {
                        this.classList.toggle("active");
                        var content = this.nextElementSibling;
                        if (content.style.display === "block") {
                            content.style.display = "none";
                        } else {
                            content.style.display = "block";
                        }
                    });
                }
            </script>

</body>

</html>